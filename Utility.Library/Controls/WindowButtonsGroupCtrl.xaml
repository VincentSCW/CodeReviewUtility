<UserControl x:Uid="UserControl_1" x:Class="Utility.Library.Controls.WindowButtonsGroupCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="30" Width="244">
    <Grid x:Uid="Grid_1">
        <Button x:Uid="helpButton" Name="helpButton" HorizontalAlignment="Right" Width="75" Margin="0,0,8,7" Content="Help"/>
        <Button x:Uid="cancelButton" Name="cancelButton" Margin="81,0,88,7" Width="75" Click="OnCancel" Content="{Binding CancelCommandText, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"/>
        <Button x:Uid="okButton" Name="okButton" HorizontalAlignment="Left" Width="75" Margin="0,0,0,7" Content="{Binding OkCommandText, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"/>
    </Grid>
</UserControl>
